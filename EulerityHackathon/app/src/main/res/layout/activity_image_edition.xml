<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".image_edition">


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/grayscaleTransformation"
                android:layout_width="200dp"
                android:layout_height="match_parent"

                android:onClick="imageClicked1"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/effect_invert"
                android:layout_width="200dp"
                android:layout_height="match_parent"

                android:onClick="imageClicked2"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/effect_mean_remove"
                android:layout_width="200dp"
                android:layout_height="match_parent"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:onClick="imageClicked3"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="match_parent"

                android:onClick="imageClicked4"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="match_parent"

                android:onClick="imageClicked5"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="200dp"
                android:layout_height="match_parent"

                android:onClick="imageClicked6"
                android:padding="2dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textViewSelectTheFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:text="Select the filter"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

</RelativeLayout>
